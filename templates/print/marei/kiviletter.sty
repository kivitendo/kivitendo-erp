{\leavevmode
  \setbox\z@\hbox to \linewidth{\parbox{\linewidth}{\raggedright#3}}%
  \dimen@\ht\z@\advance\dimen@\l__kivi_fboxsep_dim\ht\z@\dimen@
  \dimen@\dp\z@\advance\dimen@\l__kivi_fboxsep_dim\dp\z@\dimen@
  {\box\z@}}
