      }
    }
  }
  \bool_if:NF \g__kivi_Tabular_rowcolor_bool {
    \tl_gput_left:Nn \g_kivi_Pricing_colspec_tl {@{}}
    \tl_gput_right:Nn \g_kivi_Pricing_colspec_tl {@{}}
